{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "Bundler",
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["react", "react-native", "expo-router"]
    },
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
